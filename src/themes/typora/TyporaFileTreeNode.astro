---
import type { TreeNode } from '../../utils/fileTree';

interface Props {
  node: TreeNode;
  currentSlug?: string;
  depth?: number;
}

const { node, currentSlug, depth = 0 } = Astro.props;
const isActive = node.slug === currentSlug;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
const href = node.slug ? `${base}posts/${node.slug}`.replace(/\/+/g, '/') : '';
---

<div class="typora-tree-row" style={`--depth: ${depth}`}>
  {node.type === 'directory' || node.children.length > 0 ? (
    <details open class="typora-tree-details">
      <summary class="typora-tree-summary">
        <span class="typora-tree-caret" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </span>
        <span class="typora-tree-icon" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 7h6l2 2h10v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"></path>
          </svg>
        </span>
        {node.slug ? <a class="typora-tree-link" href={href}>{node.name}</a> : <span class="typora-tree-label">{node.name}</span>}
      </summary>
      <div class="typora-tree-children">
        {node.children.map((child) => (
          <Astro.self node={child} currentSlug={currentSlug} depth={depth + 1} />
        ))}
      </div>
    </details>
  ) : (
    <a class:list={["typora-tree-leaf", isActive ? "is-active" : ""]} href={href}>
      <span class="typora-tree-icon" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
        </svg>
      </span>
      {node.name}
    </a>
  )}
</div>

<style>
  .typora-tree-row {
    padding-left: calc(var(--depth) * 14px);
  }
  .typora-tree-details > summary::-webkit-details-marker {
    display: none;
  }
  .typora-tree-details[open] .typora-tree-caret {
    transform: rotate(90deg);
  }
  .typora-tree-summary {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 8px;
    border-radius: 6px;
    cursor: pointer;
    user-select: none;
    color: var(--lp-muted, #4b5563);
    font-weight: 500;
    font-size: 13px;
  }
  .typora-tree-summary:hover {
    background: var(--lp-hover, rgba(0, 0, 0, 0.03));
    color: var(--lp-fg, #111827);
  }
  .typora-tree-summary:focus-visible {
    outline: 2px solid rgba(10, 132, 255, 0.65);
    outline-offset: 2px;
    background: rgba(10, 132, 255, 0.12);
    color: var(--lp-fg, #111827);
  }
  .typora-tree-caret {
    width: 16px;
    height: 16px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--lp-muted, #9ca3af);
    opacity: 0.72;
    transform-origin: center;
    transition: transform 120ms ease;
  }
  .typora-tree-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    color: var(--lp-muted, #9ca3af);
    opacity: 0.72;
  }
  .typora-tree-link,
  .typora-tree-leaf {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 8px;
    border-radius: 6px;
    color: var(--lp-muted, #6b7280);
    text-decoration: none;
    font-weight: 500;
    font-size: 13px;
  }
  .typora-tree-link:hover,
  .typora-tree-leaf:hover {
    background: var(--lp-hover, rgba(0, 0, 0, 0.03));
    color: var(--lp-fg, #111827);
  }
  .typora-tree-link:focus-visible,
  .typora-tree-leaf:focus-visible {
    outline: 2px solid rgba(10, 132, 255, 0.65);
    outline-offset: 2px;
    background: rgba(10, 132, 255, 0.12);
    color: var(--lp-fg, #111827);
  }
  .typora-tree-leaf.is-active {
    background: var(--lp-hover-strong, rgba(0, 0, 0, 0.07));
    color: var(--lp-fg, #111827);
    font-weight: 600;
  }
  .typora-tree-children {
    margin-left: 18px;
  }
</style>
