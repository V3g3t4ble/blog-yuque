---
import { SiteConfig } from '../../config';

const avatar = SiteConfig.typora?.about?.avatar;
const name = SiteConfig.typora?.about?.name || 'V3g3t4ble\'s Blog';
const bio =
  SiteConfig.typora?.about?.bio ||
  '记录代码审计、漏洞挖掘与安全研究笔记。';
const tags = SiteConfig.typora?.about?.tags || [];

const website = SiteConfig.typora?.about?.website;

const links = [
  website ? { label: '主页', href: website } : null,
].filter(Boolean) as Array<{ label: string; href: string }>;
---

<section class="typora-about">
  <div class="typora-about-title">关于</div>
  <div class="typora-about-grid is-single">
    <div class="typora-about-main">
      <div class="typora-about-profile">
        <div class="typora-about-avatar">
          {avatar ? <img class="typora-about-avatar-img" src={avatar} alt="头像" loading="lazy" /> : null}
        </div>
        <div class="typora-about-text">
          <div class="typora-about-name">{name}</div>
          <div class="typora-about-bio">{bio}</div>
          {tags.length > 0 ? (
            <div class="typora-about-tags" aria-label="标签">
              {tags.map((t) => (
                <span class="typora-about-tag">{t}</span>
              ))}
            </div>
          ) : null}
          {links.length > 0 ? (
            <div class="typora-about-links" aria-label="链接">
              {links.map((l) => (
                <a class="typora-about-link" href={l.href} target="_blank" rel="noreferrer">{l.label}</a>
              ))}
            </div>
          ) : null}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .typora-about {
    margin: 18px 0 24px;
    padding: 14px 14px 12px;
    border: 1px solid var(--lp-border-soft, rgba(0, 0, 0, 0.08));
    border-radius: 12px;
    background: linear-gradient(180deg, var(--lp-glass-strong, rgba(255, 255, 255, 0.78)), var(--lp-glass, rgba(255, 255, 255, 0.62)));
    box-shadow: var(--lp-shadow-soft, 0 12px 40px rgba(0, 0, 0, 0.08));
    -webkit-backdrop-filter: saturate(var(--lp-saturate, 180%)) blur(var(--lp-blur, 22px));
    backdrop-filter: saturate(var(--lp-saturate, 180%)) blur(var(--lp-blur, 22px));
  }
  .typora-about-title {
    font-size: 12px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--lp-muted, #6b7280);
    margin-bottom: 10px;
    font-weight: 600;
  }
  .typora-about-grid {
    display: grid;
    grid-template-columns: 1.4fr 0.6fr;
    gap: 12px 14px;
    align-items: start;
  }
  .typora-about-grid.is-single {
    grid-template-columns: 1fr;
  }
  .typora-about-profile {
    display: flex;
    gap: 12px;
    align-items: flex-start;
  }
  .typora-about-avatar {
    width: 56px;
    height: 56px;
    border-radius: 999px;
    border: 1px solid var(--lp-border, rgba(0, 0, 0, 0.10));
    background: radial-gradient(circle at 30% 30%, rgba(37, 99, 235, 0.20), rgba(0, 0, 0, 0.03));
    overflow: hidden;
    flex: 0 0 auto;
  }
  .typora-about-avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .typora-about-text {
    min-width: 0;
  }
  .typora-about-name {
    font-size: 16px;
    font-weight: 700;
    color: var(--lp-fg, #111827);
    margin-bottom: 6px;
  }
  .typora-about-bio {
    font-size: 13px;
    line-height: 1.65;
    color: var(--lp-muted, #4b5563);
  }
  .typora-about-tags {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  .typora-about-tag {
    display: inline-flex;
    align-items: center;
    height: 22px;
    padding: 0 10px;
    border-radius: 999px;
    border: 1px solid var(--lp-border-soft, rgba(0, 0, 0, 0.08));
    background: var(--lp-glass-opaque, rgba(255, 255, 255, 0.70));
    color: var(--lp-fg, #374151);
    font-size: 12px;
    font-weight: 600;
  }
  .typora-about-links {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: flex-start;
  }
  .typora-about-link {
    display: inline-flex;
    align-items: center;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid var(--lp-border-soft, rgba(0, 0, 0, 0.08));
    background: var(--lp-glass-opaque, rgba(255, 255, 255, 0.8));
    color: var(--lp-fg, #111827);
    text-decoration: none;
    font-size: 12px;
    font-weight: 600;
  }
  .typora-about-link:hover {
    border-color: rgba(10, 132, 255, 0.35);
    background: rgba(255, 255, 255, 0.94);
  }
  @media (max-width: 640px) {
    .typora-about-grid {
      grid-template-columns: 1fr;
    }
    .typora-about-avatar {
      width: 48px;
      height: 48px;
    }
  }
</style>
