---
import { getCollection } from 'astro:content';
import { buildFileTree } from '../utils/fileTree';
import { SiteConfig } from '../config';
import TyporaLoginGate from '../themes/typora/TyporaLoginGate.astro';
import TyporaFileTree from '../themes/typora/TyporaFileTree.astro';
import TyporaSearch from '../themes/typora/TyporaSearch.astro';
import TyporaOutline from '../themes/typora/TyporaOutline.astro';
import TyporaGiscus from '../themes/typora/TyporaGiscus.astro';
import 'highlight.js/styles/github.css';

interface Props {
  title: string;
  currentSlug?: string;
  meta?: {
    created?: string;
    updated?: string;
    words?: number;
    readMinutes?: number;
  };
  locked?: boolean;
}

const { title, currentSlug, meta, locked } = Astro.props;
const showHomeButton = !!currentSlug;
const isHome = title === 'Home' && !currentSlug;
const homeHref = `${import.meta.env.BASE_URL}home`;
const hasPassword = !!SiteConfig.password;
// const isLocked = locked || /üîí|üîê|üîè/.test(title);
// If locked prop is explicitly provided (from yuque loader), use it.
// Otherwise fall back to title check (legacy behavior or for other content sources)
const isLocked = locked !== undefined ? locked : /üîí|üîê|üîè/.test(title);

const posts = await getCollection('posts');
const tree = buildFileTree(posts);
