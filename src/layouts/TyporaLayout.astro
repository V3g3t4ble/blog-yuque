<script>
  const sidebarBody = document.getElementById('typora-sidebar-body');
  const viewToggle = document.getElementById('typora-view-toggle');
  const viewTitle = document.getElementById('typora-sidebar-view-title');
  const tree = document.getElementById('typora-filetree-container');
  const outline = document.getElementById('typora-outline-container');
  const shell = document.getElementById('typora-shell');
  const overlay = document.getElementById('typora-mobile-overlay');
  const mobileMenu = document.getElementById('typora-mobile-menu');
  const mobileSearch = document.getElementById('typora-mobile-search');
  const logoutBtn = document.getElementById('typora-logout');
  const progress = document.getElementById('typora-reading-progress');
  const progressBar = document.getElementById('typora-reading-progress-bar');
  const backTop = document.getElementById('typora-back-top');
  logoutBtn?.addEventListener('click', () => {
    sessionStorage.removeItem('typora_blog_auth');
    sessionStorage.removeItem('terminal_blog_auth');
    sessionStorage.removeItem('terminal_blog_key');
    window.location.href = import.meta.env.BASE_URL;
  });

  const escapeRegExp = (input: string) => String(input ?? '').replace(/[.*+?^${}()|[\]\\]/g, '\\$&');

  const highlightQueryInArticle = () => {
    const container = document.querySelector('article.typora-prose');
    if (!container) return;
    const url = new URL(window.location.href);
    const q = (url.searchParams.get('q') || '').trim();
    if (!q) return;
    const tokens = q
      .split(/\s+/g)
      .map((t) => t.trim())
      .filter(Boolean)
      .slice(0, 6)
      .sort((a, b) => b.length - a.length);
    if (tokens.length === 0) return;

    container.querySelectorAll('mark.typora-article-hit').forEach((el) => el.replaceWith(document.createTextNode(el.textContent || '')));

    const re = new RegExp(tokens.map(escapeRegExp).join('|'), 'ig');
    const walker = document.createTreeWalker(container, NodeFilter.SHOW_TEXT, {
      acceptNode(node) {
        const parent = node.parentElement;
        if (!parent) return NodeFilter.FILTER_REJECT;
        if (parent.closest('pre, code, script, style, mark')) return NodeFilter.FILTER_REJECT;
        const text = node.nodeValue || '';
        if (!text.trim()) return NodeFilter.FILTER_REJECT;
        if (!re.test(text)) return NodeFilter.FILTER_REJECT;
        re.lastIndex = 0;
        return NodeFilter.FILTER_ACCEPT;
      },
    } as any);

    const nodes: Text[] = [];
    while (walker.nextNode()) {
      const n = walker.currentNode;
      if (n instanceof Text) nodes.push(n);
    }

    nodes.forEach((node) => {
      const text = node.nodeValue || '';
      let last = 0;
      const frag = document.createDocumentFragment();
      text.replace(re, (m, _g, offset) => {
        const idx = Number(offset);
        if (idx > last) frag.appendChild(document.createTextNode(text.slice(last, idx)));
        const mark = document.createElement('mark');
        mark.className = 'typora-article-hit';
        mark.textContent = m;
        frag.appendChild(mark);
        last = idx + m.length;
        return m;
      });
      if (last < text.length) frag.appendChild(document.createTextNode(text.slice(last)));
      node.parentNode?.replaceChild(frag, node);
    });

    const first = container.querySelector('mark.typora-article-hit');
    if (first instanceof HTMLElement) {
      setTimeout(() => first.scrollIntoView({ behavior: 'smooth', block: 'center' }), 50);
    }
  };

  const setupReadingProgress = () => {
    const isPost = document.body?.dataset.page === 'post';
    if (!isPost) {
      progress?.classList.add('hidden');
      backTop?.classList.add('hidden');
      return;
    }
    progress?.classList.remove('hidden');

    const scroller = document.querySelector('main.typora-main') as HTMLElement | null;
    if (!scroller) return;

    let ticking = false;
    const update = () => {
      ticking = false;
      const max = Math.max(1, scroller.scrollHeight - scroller.clientHeight);
      const ratio = Math.max(0, Math.min(1, scroller.scrollTop / max));
      if (progressBar instanceof HTMLElement) progressBar.style.transform = `scaleX(${ratio})`;
      const show = scroller.scrollTop > 320;
      backTop?.classList.toggle('hidden', !show);
    };
    const onScroll = () => {
      if (ticking) return;
      ticking = true;
      requestAnimationFrame(update);
    };
    scroller.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onScroll);
    backTop?.addEventListener('click', () => scroller.scrollTo({ top: 0, behavior: 'smooth' }));
    update();
  };

  const setView = (view: 'tree' | 'outline') => {
    if (!sidebarBody || !tree || !outline) return;
    sidebarBody.dataset.view = view;
    if (viewTitle) viewTitle.textContent = view === 'outline' ? 'Â§ßÁ∫≤' : 'Êñá‰ª∂';
