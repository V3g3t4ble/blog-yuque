---
import { getCollection } from 'astro:content';
import TerminalLayout from '../../layouts/TerminalLayout.astro';
import { getPostDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const postDate = getPostDate(entry);
---

<TerminalLayout title={entry.data.title} currentSlug={entry.slug}>
  <h1># {entry.data.title}</h1>
  <div class="text-zinc-500 mb-8 text-sm font-mono border-b border-zinc-800 pb-4">
    <span class="mr-4">Date: {postDate.toISOString().split('T')[0]}</span>
    {entry.data.tags && (
        <span>
            Tags: [{entry.data.tags.map((t, i) => <span class="text-yellow-500">"{t}"{i < entry.data.tags.length - 1 ? ', ' : ''}</span>)}]
        </span>
    )}
  </div>
  <Content />
</TerminalLayout>
