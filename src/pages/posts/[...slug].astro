---
import { getCollection } from 'astro:content';
import TerminalLayout from '../../layouts/TerminalLayout.astro';
import { getPostDate } from '../../utils/date';
import EncryptedPost from '../../components/EncryptedPost.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(entry => ({
    params: { slug: entry.id }, props: { entry },
  }));
}

const { entry } = Astro.props;
// Use entry.body directly for encryption instead of rendering it
// const { Content } = await entry.render(); 
const postDate = getPostDate(entry);
---

<TerminalLayout title={entry.data.title} currentSlug={entry.id}>
  <h1># {entry.data.title}</h1>
  <div class="text-zinc-500 mb-8 text-sm font-mono border-b border-zinc-800 pb-4">
    <span class="mr-4">Date: {postDate.toISOString().split('T')[0]}</span>
  </div>
  
  <EncryptedPost content={entry.body} />
</TerminalLayout>
